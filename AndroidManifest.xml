<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jodroid.d3calc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ProfileListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileDetailActivity"
            android:label="@string/title_profile_detail" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfileListActivity" />
        </activity>
        <activity
            android:name=".NewProfileActivity"
            android:label="@string/title_activity_new_profile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jodroid.d3calc.ProfileListActivity" />
        </activity>
        <activity
            android:name="jodroid.util.EditTextActivity"
            android:label="@string/editText"
            android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>