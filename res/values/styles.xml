<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="black">#000000</color>
    <color name="white">#ffffff</color>
    <color name="green">#00ff00</color>
    <color name="red">#ff0000</color>
    <color name="blue">#0000ff</color>
    <color name="lightblue">#ccccff</color>
    <color name="mediumblue">#6666ff</color>
    <color name="lightgrey">#eeeeee</color>
    
    <color name="legendary">#FF8C00</color>
    <color name="set">#7FFF00</color>
    <color name="magic">#2534FF</color>
    <color name="rare">#FFD700</color>
    
    <style name="AppTheme" parent="android:Theme.Light" />
    <style name="ButtonBW" parent="android:Theme.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SectionTitle" parent="android:Theme.Light">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="NormalText" parent="android:Theme.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="SectionText" parent="NormalText">
        <item name="android:layout_marginLeft">10dp</item>
    </style>
</resources>